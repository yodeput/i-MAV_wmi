<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_lay"
    android:background="@color/cardview_light_background">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cardview_light_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/lin_mainpic"
            android:backgroundTint="@color/tr_blue"
            android:backgroundTintMode="src_over"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:layout_height="160sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical|center"
                android:layout_marginTop="5sp">

                <ImageView
                    app:srcCompat="@drawable/rounded_avatar_frame"
                    android:id="@+id/imageView2"
                    android:scaleType="centerCrop"
                    android:elevation="3dp"
                    android:layout_width="100sp"
                    android:layout_height="100sp" />

                <ImageView
                    android:id="@+id/img_profile"
                    app:srcCompat="@drawable/avatar_default_round"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="5sp"
                    android:elevation="0dp"
                    android:layout_centerInParent="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="false"
                    android:layout_alignWithParentIfMissing="false"
                    android:keepScreenOn="false"
                    android:layout_width="90sp"
                    android:layout_height="90sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Welcome TEXT"
                android:id="@+id/welcometxt"
                android:gravity="center_horizontal"
                android:textColor="@color/input_login"
                android:visibility="gone" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/input_login"
                android:gravity="center_horizontal"
                android:text="Nama PIC Text"
                android:layout_marginTop="5sp"
                android:fontFamily="serif"
                android:textAllCaps="true"
                android:textStyle="normal|bold"
             />

            <TextView
                android:id="@+id/level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:text="LEVEL PIC Text"
                android:textColor="@color/input_login"
                android:visibility="gone" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="12dp"
                android:text="Email PIC Text"
                android:textColor="@color/input_login"
                android:fontFamily="serif"
                android:textAllCaps="false" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/lin_place"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/bg_login"
            android:padding="2sp"
            android:layout_weight="1">

            <ImageView
                android:src="@drawable/point"
                android:id="@+id/imageView"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_width="18dp"
                android:layout_height="22sp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginLeft="5sp">

                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_whote"
                    android:text="daerah, kota"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_whote"
                    android:text="provisi, negara"
                    android:textSize="11dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5sp"
            android:layout_weight="1">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="MY VISIT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="normal|bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/myvisit_but"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_green_dark"
                    android:text="-"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="?attr/colorPrimary"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:elevation="5dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="OUTSTANDING"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="normal|bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/outstanding_but"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="-"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="?attr/colorPrimary"
                    android:background="@android:color/holo_red_dark"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:elevation="5dp"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:background="@color/primary_dark"
                android:textStyle="bold"
                android:text="CHECK IN"
                android:textAllCaps="false"
                android:textColor="@color/btn_login_bg"
                android:textSize="20dp"/>

            <TextView
                android:text="update_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status_txt"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSitelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="#0091ea"
                android:text="Site List"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/btn_logut_bg"
                android:text="@string/btn_logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_alignStart="@+id/linearLayout2"
                android:layout_marginTop="25dp"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/btnVisitAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="#29b6f6"
            android:text="Site Visit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>